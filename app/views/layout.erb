<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" />
    <title>Ascriber</title>

    <style media="screen">
      footer {
        text-align: center;
      }

      a {
        text-decoration: none;
        color: #60D;
      }

      .flagged {
        background-color: rgba(255, 5, 5, .15)
      }
    </style>
  </head>
  <body>
    <header class="container">
      <h1><a href="/">Ascriber</a></h1>
      <p>
        <em>Find and fix unattributed images on your site before they find you.</em>
      </p>
      <br>
    </header>
    <main class="container">
      <%= yield %>
    </main>
    <footer class="container">
      <hr>
      <small>
        Built by Andrew Fischer, Cyrena Gonzalez, &amp; Alex Graves.
      </small>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript">
      var similars = document.getElementsByClassName("find-similar");
      $('tbody').append('<tr><td id="related-images" colspan="4"></td></tr>');

      for (var i = 0; i < similars.length; i++) {
        similars[i].addEventListener('click', function() {
          $.post( "/similar", { search_url: this.getAttribute("data-img-url") } ).done(function( data ) {
            data = JSON.parse(data)
            data = data['items']
            for (var i = 0; i < data.length; i++) {
              img = data[i]['image'];
              var thumb = data[i]['image']['thumbnailLink']
              var full = data[i]['link']
              $('#related-images').append('<a href="' + full + '"><img src="' + thumb + '"></a>')
            }
            // console.log( "Data Loaded: " + JSON.stringify(data) );
          });;
        });
      }
    </script>
  </body>
</html>
